<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlData"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll4646464"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="RESUMEN MEDICION NUEVE PUNTOS"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:background="@color/colorTv"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l1"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="ILUMINANCIA PROMEDIO "
                        android:textColor="@color/Black"
                        android:background="@color/colorTv"/>

                    <TextView

                        android:id="@+id/tv_ilumProm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Lux"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET"
                        />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Lux"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l2"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ILUMINANCIA MINIMA "
                        android:textColor="@color/Black"
                        android:background="@color/colorTv"/>

                    <TextView

                        android:id="@+id/tv_ilumMin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Lux"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET"/>

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Lux"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l3"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ILUMINANCIA MAXIMA "
                        android:textColor="@color/Black"
                        android:background="@color/colorTv"/>

                    <TextView

                        android:id="@+id/tv_ilumMax"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Lux"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET"/>

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Lux"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET"  />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/l5"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="UNIFORMIDAD"
                        android:textColor="@color/Black"
                        android:background="@color/colorTv"/>

                    <TextView

                        android:id="@+id/tv_uni"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="%"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="%"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Gray"
                        android:background="@color/colorET"  />

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="CUMPLIMIENTO RETILAP"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/Black"/>

                <CheckBox
                    android:id="@+id/chSI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:clickable="false"/>

                <CheckBox
                    android:id="@+id/chNO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:clickable="false"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="124dp"
                        android:layout_height="fill_parent"

                        android:gravity="center|center_vertical"
                        android:text="OBSERVACIONES"
                        android:background="@color/colorTv"
                        android:textColor="@color/colorTvTx"/>

                    <EditText
                        android:id="@+id/tv_observaciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|center_vertical"
                        android:background="@color/colorET"
                        android:layout_marginLeft="5dp"
                        android:hint="Ingrese las observaciones pertinentes al tramo (opcional)"
                        />

                </LinearLayout>



                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/rounded_button"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="CONFIRMAR Y ENVIAR"
                    android:layout_marginTop="50dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>